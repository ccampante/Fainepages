
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="panel panel-default">
    <div class="panel-heading">Entre com suas informações</div>
    <div class="panel-body">
        <form>
            <div class="form-group">
                <label for="inputEmail1">Email</label>
                <input type="email" class="form-control" id="inputEmail1" aria-describedby="email" placeholder="email">
            </div>
            <div class="form-group">
                <label for="inputPassword1">Senha</label>
                <input type="password" class="form-control" id="inputPassword1" placeholder="senha">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</div>