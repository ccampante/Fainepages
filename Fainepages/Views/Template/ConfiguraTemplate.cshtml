@model Fainepages.Models.Template

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">

        <div class="row">
            <div class="col-md-4">Configurando Template</div>
            <div class="col-md-4">Configurando Atributos</div>
            <div class="col-md-4">Upload de Arquivos</div>
        </div>

        <div class="progress">
            <div class="progress-bar progress-bar-danger" style="width: 33%">
                <span class="sr-only">100%</span>
            </div>
            <div class="progress-bar progress-bar-warning" style="width: 0%">
                <span class="sr-only">0%</span>
            </div>
            <div class="progress-bar progress-bar-success" style="width: 0%">
                <span class="sr-only">0%</span>
            </div>
        </div>

    </div>
</div>

<h2>Step 1</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="panel panel-default">
        <div class="panel-heading">CEO</div>
        <div class="panel-body">

            <div class="form-group">
                <label for="url">URL</label>
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Url, "mensagem", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="titulo">Título</label>
                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="metadescricao">Meta Descrição</label><br />
                        @Html.TextAreaFor(model => model.MetaDescricao, new { @class = "form-control", @rows = "5" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="metadescricao">Palavras Chaves</label>
                        @Html.TextAreaFor(model => model.PalavrasChaves, new { @class = "form-control", @rows = "5" })
                    </div>
                </div>
            </div>



        </div>
